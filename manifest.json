{
  "name": "Japanese Vocab",
  "version": "2.0",
  "description": "Presents a quick Japanese verb vocabulary question upon opening or closing a tab.",
  "manifest_version": 2,

  "browser_action": {
      "default_icon": "resources/icon-active.png",
      "default_title": "Japanese Vocab Test: Active"
  },

  "background": {
      "page": "background.html"
  },

  "options_page": "options.html",

  "permissions": [
    "tabs", "http://*/*"
  ]
}
